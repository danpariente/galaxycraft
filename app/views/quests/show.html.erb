<h1><%= @quest.name %></h1>
<h2><%= @student.name %></h2>

<h3>Assignment</h3>

<%= @assignment&.submitted_at %>
<%= @assignment&.submission.html_safe %>

<hr>

<%= form_with(model: Assignment.new, local: true, type: :model, html: {class: "form-class", style: "min-width: 800px;"}) do |f| %>
  <%= f.label :submission, 'Submission', class: "form-label" %>
  <%= f.rich_text_area :submission, class: "form-input" %>
  <%= f.hidden_field :quest_id, value: @quest.id %>
  <%= f.hidden_field :student_id, value: @student.id %>
  <%= f.submit 'Submit', class: "form-button" %>
<% end %>